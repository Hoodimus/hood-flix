<!-- header lists amount of users and pluralizes "User" -->
<h1><%= pluralize(@users.size, "User") %><h1>
	<!-- unordered list tag has CSS class users -->
	<ul class="users">
		<!-- iterates through the list of users -->
		<% @users.each do |user| %>
		<li> <!-- list item -->
			<!-- puts name of each user and linked to their show page -->
			<%= profile_image(user, 35) %>
			<%= link_to user.username, user_path(user) %>
			created
			<!-- puts when user was created in words -->
			<%= time_ago_in_words(user.created_at) %> ago
		</li>
		<%end%>
	</ul>