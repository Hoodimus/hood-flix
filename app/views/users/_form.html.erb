<%= form_with(model: @user, local: true) do |f| %>
	<!-- renders the shared/errors on the user object -->
	<%= render "shared/errors", object: @user %>

	<%= f.label :username %>
	<%= f.text_field :username, placeholder: "Alphanumeric characters only!" %>

	<%= f.label :name %>
	<%= f.text_field :name, autofocus: true %>

	<%= f.label :email %>
	<%= f.email_field :email %>

	<%= f.label :password %>
	<%= f.password_field :password %>

	<%= f.label :password_confirmation, "Confirm Password" %>
	<%= f.password_field :password_confirmation %>
	<!-- if it is a new user record the submit button with say Create Account -->
	<% if user.new_record? %>
  		<%= f.submit "Create Account" %>
	<% else %>
	<!-- otherwise will say Update account -->
  		<%= f.submit "Update Account" %>
	<% end %>
<% end %>