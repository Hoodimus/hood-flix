<h1>Editing Genre - "<%= @genre.name %>"</h1>
	<%= form_with(model: @genre, local: true) do |f| %>

	<%= f.label :name %>
	<%= f.text_field :name, autofocus: true %>

	<%= f.submit "Update Genre" %>
	<section class="admin">
	<%= link_to "Delete", genre_path(@genre), class: 'button',
                        method: :delete, data: { confirm: 'Are you sure?' } %>
    </section>
<% end %>